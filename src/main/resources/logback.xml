<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" period="60000">
<!--    <include resource="org/springframework/boot/logging/logback/defaults.xml" />-->
    <property name="log.base" value="logs/"/>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
<!--                %date{yyyy-MM-dd HH:mm:ss.SSS} %t %X{req.id} %-5level %logger{36} - %msg%n-->
                %date{yyyy-MM-dd HH:mm:ss.SSS} %t %X{mark} %-5level %logger{36} - %msg%n

            </pattern>
            <charset>utf8</charset>
        </encoder>

    </appender>


    <appender name="rollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${log.base}%d{yyyy-MM-dd}.%i.log</fileNamePattern>

            <maxHistory>30</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
            <maxFileSize>100MB</maxFileSize>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>

        <encoder>
            <pattern>
                %date{yyyy-MM-dd HH:mm:ss.SSS} %t %X{mark} %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- 自定义特殊包的日志级别 -->
<!--    <logger name="org.springframework.kafka" level="off"/>-->
<!--    <logger name="org.apache.kafka" level="off"/>-->
<!--    <logger name="org.apache.zookeeper" level="off"/>-->
    <logger name="com.zaxxer.hikari.pool.HikariPool" level="error"/>

    <root level="info">
        <appender-ref ref="console"/>
        <appender-ref ref="rollingFile"/>
    </root>
</configuration>
